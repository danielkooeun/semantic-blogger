<% include partials/header %>

<div class='ui main text container'>
    <div class='ui huge header'>myBlog</div>
    <div class='ui top attached segment'>
        <div class='ui divided items'>
            <% posts.forEach(function(post) { %>
                <div class='item'>
                    <div class='image'>
                        <img src='<%= post.image %>'>
                    </div>
                    <div class='content'>
                        <a class='header' href='/posts/<%= post._id %>'><%= post.title %></a>
                        <div class='meta'>
                            <span><%= post.created.toDateString() %></span>
                        </div>
                        <div class='description'>
                            <p><%- post.body.substring(0,99) %>...</p>
                        </div>
                        <div class='extra'>
                            <a href='/posts/<%= post._id %>' class='ui black mini basic button'>Read More</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% include partials/footer %>