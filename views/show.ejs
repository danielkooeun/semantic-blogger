<% include partials/header %>

<div class='ui main text container segment'>
    <div class='ui huge header'><%= post.title %></div>
    <div class='ui top attached'>
        <div class='item'>
            <img class='ui centered rounded image' src='<%= post.image %>'>
            <div class='content'>
                <span class='date'><%= post.created.toDateString() %></span>
            </div>
            <div class='description'>
                <p><%- post.body %></p>
            </div>
            <div class='extra buttons'>
                <a href='/posts/<%= post._id %>/edit' class='ui blue mini basic button'>Edit</a>
                <form id='delete' action='/posts/<%= post._id %>?_method=DELETE' method='POST'>
                    <button class='ui red mini basic button'>Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>